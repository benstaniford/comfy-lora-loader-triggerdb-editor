<Window x:Class="LoraDbEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LoRA DB Editor" Height="700" Width="1200"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- TreeView Item Style -->
        <Style TargetType="{x:Type TreeViewItem}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Drag and Drop Zone for Adding LoRA -->
        <Border Grid.Row="0" Margin="10,10,10,5"
                Background="#3F3F46"
                BorderThickness="2"
                BorderBrush="{StaticResource BorderBrush}"
                AllowDrop="True"
                PreviewDragOver="AddLoraZone_PreviewDragOver"
                Drop="AddLoraZone_Drop">
            <TextBlock Text="Add Lora (Drag and Drop)"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="{StaticResource TextBrush}"
                      Opacity="0.7"/>
        </Border>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Tree View -->
        <Border Grid.Column="0" BorderThickness="1" Background="{StaticResource SurfaceBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="LoRA Files" FontWeight="Bold" FontSize="14"
                          Margin="10" Foreground="{StaticResource TextBrush}"/>

                <TreeView Grid.Row="1" x:Name="FileTreeView"
                         Background="{StaticResource SurfaceBrush}"
                         BorderThickness="0"
                         SelectedItemChanged="FileTreeView_SelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextBrush}"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                     Background="{StaticResource BorderBrush}"/>

        <!-- Right Panel: Search and Details -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search Box -->
            <Border Grid.Row="0" BorderThickness="1" Background="{StaticResource SurfaceBrush}" Margin="0,0,0,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Search LoRA Files" FontWeight="Bold" FontSize="14"
                              Margin="0,0,0,10" Foreground="{StaticResource TextBrush}"/>

                    <ComboBox Grid.Row="1" x:Name="SearchComboBox"
                             IsEditable="True"
                             TextSearch.TextPath="."
                             Height="30"
                             FontSize="13"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             SelectionChanged="SearchComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="{StaticResource TextBrush}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Selected File Title -->
            <Border Grid.Row="1" BorderThickness="1" Background="{StaticResource SurfaceBrush}"
                   Margin="0,0,0,10" Visibility="{Binding SelectedFileVisibility}">
                <Grid Margin="10">
                    <TextBlock x:Name="SelectedFileTitle" FontWeight="Bold" FontSize="16"
                              TextWrapping="Wrap" Foreground="{StaticResource TextBrush}"/>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Row="2" BorderThickness="1" Background="{StaticResource SurfaceBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailsPanel" Margin="15" Visibility="Collapsed">
                        <!-- File ID Section -->
                        <TextBlock Text="File ID" FontWeight="Bold" FontSize="13"
                                  Margin="0,0,0,5" Foreground="{StaticResource TextBrush}"/>

                        <Border x:Name="FileIdWarningBorder" BorderThickness="2"
                               Padding="10" Margin="0,0,0,10" Visibility="Collapsed"
                               Background="#3D2626">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" x:Name="FileIdWarningText"
                                          FontWeight="Bold" TextWrapping="Wrap"
                                          Margin="0,0,0,5"/>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,5">
                                    <TextBlock Text="Current: " Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="CurrentFileIdText" FontFamily="Consolas"
                                              Foreground="{StaticResource ErrorBrush}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock Text="Expected: " Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="ExpectedFileIdText" FontFamily="Consolas"
                                              Foreground="{StaticResource SuccessBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                               Padding="10" Margin="0,0,0,15" Background="{StaticResource BackgroundBrush}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" x:Name="FileIdText" FontFamily="Consolas"
                                          TextWrapping="Wrap" Foreground="{StaticResource TextBrush}"/>

                                <Button Grid.Row="1" x:Name="UpdateFileIdButton" Content="Update File ID"
                                       Width="150" HorizontalAlignment="Left" Margin="0,10,0,0"
                                       Click="UpdateFileIdButton_Click" Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Active Triggers Section -->
                        <TextBlock Text="Active Triggers" FontWeight="Bold" FontSize="13"
                                  Margin="0,0,0,5" Foreground="{StaticResource TextBrush}"/>
                        <Border BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                               Padding="10" Margin="0,0,0,15" Background="{StaticResource BackgroundBrush}">
                            <TextBox x:Name="ActiveTriggersText" TextWrapping="Wrap"
                                    MinHeight="60" AcceptsReturn="True"
                                    BorderThickness="0" Background="Transparent"
                                    Foreground="{StaticResource TextBrush}"
                                    TextChanged="ActiveTriggersText_TextChanged"/>
                        </Border>

                        <!-- All Triggers Section -->
                        <TextBlock Text="All Triggers" FontWeight="Bold" FontSize="13"
                                  Margin="0,0,0,5" Foreground="{StaticResource TextBrush}"/>
                        <Border BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                               Padding="10" Margin="0,0,0,15" Background="{StaticResource BackgroundBrush}">
                            <TextBox x:Name="AllTriggersText" TextWrapping="Wrap"
                                    MinHeight="100" AcceptsReturn="True"
                                    BorderThickness="0" Background="Transparent"
                                    Foreground="{StaticResource TextBrush}"
                                    TextChanged="AllTriggersText_TextChanged"/>
                        </Border>

                        <!-- Source URL Section -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Source URL" FontWeight="Bold" FontSize="13"
                                      Foreground="{StaticResource TextBrush}"/>
                            <TextBlock x:Name="SourceUrlLink" Margin="10,0,0,0" Visibility="Collapsed">
                                <Hyperlink x:Name="SourceUrlHyperlink"
                                          RequestNavigate="SourceUrlHyperlink_RequestNavigate"
                                          Foreground="{StaticResource AccentBrush}">
                                    <Run Text="Open"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <Border BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                               Padding="10" Margin="0,0,0,15" Background="{StaticResource BackgroundBrush}">
                            <TextBox x:Name="SourceUrlText" TextWrapping="Wrap"
                                    BorderThickness="0" Background="Transparent"
                                    Foreground="{StaticResource TextBrush}"
                                    AllowDrop="True"
                                    PreviewDragOver="SourceUrlText_PreviewDragOver"
                                    Drop="SourceUrlText_Drop"
                                    TextChanged="SourceUrlText_TextChanged"/>
                        </Border>

                        <!-- Suggested Strength Section -->
                        <TextBlock Text="Suggested Strength" FontWeight="Bold" FontSize="13"
                                  Margin="0,0,0,5" Foreground="{StaticResource TextBrush}"/>
                        <Border BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                               Padding="10" Margin="0,0,0,15" Background="{StaticResource BackgroundBrush}">
                            <TextBox x:Name="SuggestedStrengthText" TextWrapping="Wrap"
                                    BorderThickness="0" Background="Transparent"
                                    Foreground="{StaticResource TextBrush}"
                                    TextChanged="SuggestedStrengthText_TextChanged"/>
                        </Border>

                        <!-- Notes Section -->
                        <TextBlock Text="Notes" FontWeight="Bold" FontSize="13"
                                  Margin="0,0,0,5" Foreground="{StaticResource TextBrush}"/>
                        <Border BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                               Padding="10" Margin="0,0,0,15" Background="{StaticResource BackgroundBrush}">
                            <TextBox x:Name="NotesText" TextWrapping="Wrap"
                                    MinHeight="80" AcceptsReturn="True"
                                    BorderThickness="0" Background="Transparent"
                                    Foreground="{StaticResource TextBrush}"
                                    TextChanged="NotesText_TextChanged"/>
                        </Border>

                        <!-- Gallery Section -->
                        <TextBlock Text="Gallery" FontWeight="Bold" FontSize="13"
                                  Margin="0,0,0,5" Foreground="{StaticResource TextBrush}"/>
                        <Border BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                               Padding="10" Background="{StaticResource BackgroundBrush}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="GalleryPanel" Orientation="Horizontal">
                                    <!-- Gallery images will be added here dynamically -->

                                    <!-- Add Image Box -->
                                    <Border x:Name="AddImageBox" Width="256" Height="256"
                                           BorderThickness="2" BorderBrush="{StaticResource BorderBrush}"
                                           Background="{StaticResource SurfaceBrush}"
                                           AllowDrop="True"
                                           DragOver="AddImageBox_DragOver"
                                           Drop="AddImageBox_Drop"
                                           Margin="0,0,10,0">
                                        <TextBlock Text="Add Image&#x0a;(Drag and Drop)"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextAlignment="Center"
                                                  Foreground="{StaticResource TextBrush}"
                                                  FontSize="14"
                                                  Opacity="0.6"/>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="3" BorderThickness="1" Background="{StaticResource SurfaceBrush}"
                   Margin="0,10,0,0">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusText" Grid.Column="0" Foreground="{StaticResource TextBrush}"/>
                    <Button x:Name="SaveButton" Grid.Column="1" Content="Save Database"
                           Width="120" Click="SaveButton_Click" IsEnabled="False"/>
                </Grid>
            </Border>
        </Grid>
        </Grid>
    </Grid>
</Window>
