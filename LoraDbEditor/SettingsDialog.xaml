<Window x:Class="LoraDbEditor.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="250" Width="500"
        Background="{StaticResource BackgroundBrush}"
        Icon="lora-edit.ico"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Civitai API Key Section -->
        <TextBlock Grid.Row="0" Text="Civitai API Key" FontWeight="Bold" FontSize="14"
                  Margin="0,0,0,10" Foreground="{StaticResource TextBrush}"/>

        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,0,0,10"
                  Foreground="{StaticResource TextBrush}" Opacity="0.8">
            Enter your Civitai API key to enable automatic authentication for Civitai downloads.
            Get your API key from: Civitai → Account Settings → API Keys
        </TextBlock>

        <Border Grid.Row="2" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
               Padding="10" Margin="0,0,0,20" Background="{StaticResource SurfaceBrush}">
            <TextBox x:Name="ApiKeyTextBox"
                    BorderThickness="0"
                    Background="Transparent"
                    Foreground="{StaticResource TextBrush}"
                    FontFamily="Consolas"
                    TextChanged="ApiKeyTextBox_TextChanged"/>
        </Border>

        <!-- Status message -->
        <TextBlock Grid.Row="3" x:Name="StatusTextBlock"
                  Foreground="{StaticResource TextBrush}"
                  Opacity="0.6"
                  VerticalAlignment="Top"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" Width="80" Height="30"
                   Margin="0,0,10,0" Click="SaveButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30"
                   Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
