<Window x:Class="LoraDbEditor.FolderSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Folder Location" Height="500" Width="600"
        Background="{StaticResource BackgroundBrush}"
        Icon="lora-edit.ico"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Where would you like to save the LoRA file?"
                  FontSize="14" FontWeight="Bold"
                  Margin="0,0,0,15"
                  Foreground="{StaticResource TextBrush}"/>

        <!-- Tree View -->
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
               Background="{StaticResource SurfaceBrush}" Margin="0,0,0,15">
            <TreeView x:Name="FolderTreeView"
                     Background="{StaticResource SurfaceBrush}"
                     BorderThickness="0"
                     SelectedItemChanged="FolderTreeView_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Border>

        <!-- Text Input for Manual Entry -->
        <TextBlock Grid.Row="2" Text="Or enter path manually (e.g., 'category/subcategory/filename'):"
                  FontSize="12"
                  Margin="0,0,0,5"
                  Foreground="{StaticResource TextBrush}"/>

        <Border Grid.Row="3" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
               Background="{StaticResource SurfaceBrush}" Margin="0,0,0,15">
            <TextBox x:Name="PathTextBox"
                    Padding="8"
                    BorderThickness="0"
                    Background="Transparent"
                    Foreground="{StaticResource TextBrush}"
                    TextChanged="PathTextBox_TextChanged"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Margin="0,0,10,0"
                   Click="OkButton_Click" IsDefault="True"
                   IsEnabled="{Binding IsPathValid}"/>
            <Button Content="Cancel" Width="100"
                   Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
